        @Html.LabelFor(model => model.Disponibilita, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Disponibilita)
                @Html.ValidationMessageFor(model => model.Disponibilita, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salva" class="mt-3 mb-3 btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Ritorna alla lista", "ListaProdotto")
</div>
