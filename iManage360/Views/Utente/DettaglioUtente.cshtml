@model iManage360.Models.Utente

@{
    ViewBag.Title = "DettaglioUtente";
}

<h2 class="text-center">Dettaglio Utente</h2>
<hr />

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ruoli.NomeRuolo)</th>
            <td>@Html.DisplayFor(model => model.Ruoli.NomeRuolo)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <td>@Html.DisplayFor(model => model.Nome)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <td>@Html.DisplayFor(model => model.Cognome)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ruolo)</th>
            <td>@Html.DisplayFor(model => model.Ruolo)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NumeroTelefono)</th>
            <td>@Html.DisplayFor(model => model.NumeroTelefono)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Indirizzo)</th>
            <td>@Html.DisplayFor(model => model.Indirizzo)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CodiceFiscale)</th>
            <td>@Html.DisplayFor(model => model.CodiceFiscale)</td>
        </tr>
    </table>
</div>

<p>
    @Html.ActionLink("Modifica", "ModificaUtente", new { id = Model.ID }, new { @class = "btn btn-warning mx-1" })
    @Html.ActionLink("Elimina", "EliminaUtente", new { id = Model.ID }, new { @class = "btn btn-danger mx-1" })

    @if (Model.Ruoli.NomeRuolo == "Dipendente")
    {
        @Html.ActionLink("Aggiungi Attività", "CreaAttivita", "Attivita", new { id = Model.ID }, new { @class = "btn btn-info mx-1" })
        @Html.ActionLink("Aggiungi Performance", "CreaPerformance", "Performance", new { id = Model.ID }, new { @class = "btn btn-info mx-1" })
        @Html.ActionLink("Aggiungi Documento Dipendente", "CreaDocumento", "Documento", new { id = Model.ID, tipo = "Dipendente" }, new { @class = "btn btn-info mx-1" })
    }
    else if (Model.Ruoli.NomeRuolo == "Cliente")
    {
        @Html.ActionLink("Aggiungi Fattura", "CreaDocumento", "Documento", new { id = Model.ID, tipo = "Cliente" }, new { @class = "btn btn-info mx-1" })
    }
</p>
@Html.ActionLink("Ritorna alla lista", "ListaUtente")
